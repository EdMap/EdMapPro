{
  "version": "1.0.0",
  "name": "edmap Simulation Catalogue",
  "description": "Unified catalogue for Interview and Workspace simulators",
  "metadata": {
    "lastUpdated": "2025-01",
    "currentlySupported": {
      "roles": ["developer"],
      "languages": ["javascript"],
      "levels": ["junior", "mid", "senior"]
    },
    "plannedSupport": {
      "roles": ["pm", "qa", "devops", "data_science"],
      "languages": ["python", "c_cpp"],
      "levels": ["intern"]
    }
  },
  "structure": {
    "interview": {
      "path": "interview/",
      "description": "Interview simulator content (pre-hire phase)",
      "files": [
        {
          "name": "question-banks.json",
          "type": "question_bank",
          "description": "Interview questions organized by role, type, and difficulty"
        },
        {
          "name": "interview-config.json",
          "type": "interview_configuration",
          "description": "Interview types, roles, difficulties, and stage settings"
        },
        {
          "name": "evaluation-rubrics.json",
          "type": "evaluation_rubrics",
          "description": "Scoring criteria and evaluation guidelines"
        },
        {
          "name": "team-personas.json",
          "type": "team_personas",
          "description": "Team interview personas and panel configurations"
        }
      ]
    },
    "workspace": {
      "path": "workspace/",
      "description": "Workspace simulator content (post-hire phase)",
      "files": [
        {
          "name": "team-members.json",
          "type": "team_members",
          "description": "Team member definitions for workspace simulation"
        },
        {
          "name": "documentation-day1.json",
          "type": "onboarding_documentation",
          "description": "Day 1 onboarding documentation content"
        },
        {
          "name": "activities-day1.json",
          "type": "daily_activities",
          "description": "Day 1 activities and progression"
        },
        {
          "name": "activities-day2.json",
          "type": "daily_activities",
          "description": "Day 2 activities and progression"
        },
        {
          "name": "ticket-timezone-bug.json",
          "type": "ticket",
          "description": "Timezone bug ticket for Day 2 coding exercise"
        },
        {
          "name": "standup-script.json",
          "type": "standup_script",
          "description": "Day 2 daily standup meeting script"
        },
        {
          "name": "dev-setup-steps.json",
          "type": "dev_setup_steps",
          "description": "Development environment setup commands (clone, npm install, etc.)"
        },
        {
          "name": "git-workflow-steps.json",
          "type": "git_workflow_steps",
          "description": "Git workflow commands (add, commit, push)"
        },
        {
          "name": "codebase-structure.json",
          "type": "codebase_structure",
          "description": "Simulated codebase file tree for exploration"
        },
        {
          "name": "code-exercise-timezone.json",
          "type": "code_exercise",
          "description": "Timezone bug fix code exercise with validation"
        },
        {
          "name": "branch-creation.json",
          "type": "branch_creation",
          "description": "Git branch creation exercise and naming conventions"
        }
      ]
    }
  },
  "adapters": {
    "description": "Adapters transform catalogue content for specific contexts",
    "types": {
      "role": {
        "description": "Adapts content for specific roles (Developer, PM, QA, etc.)",
        "current": ["developer"],
        "planned": ["pm", "qa", "devops", "data_science"]
      },
      "level": {
        "description": "Adapts difficulty and expectations for experience level",
        "current": ["junior", "mid", "senior"],
        "planned": ["intern"]
      },
      "language": {
        "description": "Adapts technical content for specific programming languages",
        "current": ["javascript"],
        "planned": ["python", "c_cpp"],
        "appliesTo": ["developer"]
      }
    }
  },
  "contentTypes": {
    "question_bank": {
      "description": "Collection of interview questions",
      "schema": {
        "required": ["version", "type", "content"],
        "content": {
          "roles": "Record<roleId, { types: Record<type, Record<level, Question[]>> }>"
        }
      }
    },
    "interview_configuration": {
      "description": "Interview types, roles, difficulties, and stage settings",
      "schema": {
        "required": ["version", "type", "content"],
        "content": {
          "targetRoles": "Role[]",
          "interviewTypes": "InterviewType[]",
          "difficulties": "Difficulty[]",
          "stageSettings": "Record<stage, StageSettings>"
        }
      }
    },
    "evaluation_rubrics": {
      "description": "Scoring and evaluation criteria for interviews",
      "schema": {
        "required": ["version", "type", "content"],
        "content": {
          "scoringScale": "{ min, max, labels }",
          "evaluationDimensions": "Record<dimension, DimensionConfig>",
          "finalReportStructure": "ReportConfig"
        }
      }
    },
    "team_personas": {
      "description": "Interview personas for team/panel interviews",
      "schema": {
        "required": ["version", "type", "content"],
        "content": {
          "personas": "Record<personaId, PersonaConfig>",
          "teamConfigurations": "Record<configId, TeamConfig>"
        }
      }
    },
    "daily_activities": {
      "description": "Activities and progression for a simulation day",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "day": "{ number, theme, title, description }",
          "activities": "Activity[]",
          "completionMessage": "CompletionMessage"
        }
      }
    },
    "onboarding_documentation": {
      "description": "Onboarding documentation content for workspace simulation",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "welcome": "WelcomeConfig",
          "tabs": "Tab[]",
          "sections": "Record<sectionId, SectionContent>"
        }
      }
    },
    "team_members": {
      "description": "Team member definitions",
      "schema": {
        "required": ["version", "type", "content"],
        "content": {
          "team": "{ name, company, project }",
          "members": "TeamMember[]"
        }
      }
    },
    "ticket": {
      "description": "Bug fix or feature ticket for coding exercises",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "ticket": "TicketDetails",
          "codeExercise": "CodeExercise",
          "gitWorkflow": "GitWorkflow"
        }
      }
    },
    "standup_script": {
      "description": "Daily standup meeting script with timed messages",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "meeting": "{ name, team, time, format }",
          "script": "StandupMessage[]",
          "userGuidance": "UserGuidanceConfig"
        }
      }
    },
    "dev_setup_steps": {
      "description": "Development environment setup steps with validation",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "introduction": "{ title, description }",
          "project": "{ name, org, repoUrl }",
          "steps": "SetupStep[]"
        }
      }
    },
    "git_workflow_steps": {
      "description": "Git workflow steps (add, commit, push) with validation",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "introduction": "{ title, description }",
          "steps": "GitStep[]"
        }
      }
    },
    "codebase_structure": {
      "description": "Simulated codebase file tree for exploration",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "introduction": "{ title, description }",
          "targetFile": "{ name, path, description }",
          "fileStructure": "FileNode[]"
        }
      }
    },
    "code_exercise": {
      "description": "Code fix exercise with blanks and validation",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "introduction": "{ title, description }",
          "file": "{ path, name }",
          "codeTemplate": "{ language, code }",
          "blanks": "BlankConfig[]",
          "testScenario": "TestScenarioConfig"
        }
      }
    },
    "branch_creation": {
      "description": "Git branch creation exercise with naming conventions",
      "schema": {
        "required": ["version", "type", "metadata", "content"],
        "content": {
          "introduction": "{ title, description }",
          "whyBranch": "Reason[]",
          "namingConvention": "NamingConfig",
          "validation": "ValidationRules"
        }
      }
    }
  },
  "queryExamples": {
    "getQuestionsByRoleAndLevel": {
      "description": "Get interview questions for a specific role and level",
      "path": "interview/question-banks.json",
      "query": "content.roles[role].types[type][level]"
    },
    "getActivitiesForDay": {
      "description": "Get activities for a specific simulation day",
      "path": "workspace/activities-day{N}.json",
      "query": "content.activities"
    },
    "getTeamMembers": {
      "description": "Get team members for workspace simulation",
      "path": "workspace/team-members.json",
      "query": "content.members"
    },
    "getPersonaStyle": {
      "description": "Get styling for a specific interview persona",
      "path": "interview/team-personas.json",
      "query": "content.personas[personaId].style"
    }
  }
}
