  "content": {
    "introduction": {
      "title": "Set Up Your Dev Environment",
      "description": "Before you can work on the code, you need to get it on your machine and running locally."
    },
    "project": {
      "name": "merchant-dashboard",
      "org": "novapay",
      "repoUrl": "github.com/novapay/merchant-dashboard"
    },
    "steps": [
      {
        "id": "clone",
        "order": 1,
        "instruction": "Clone the repository novapay/merchant-dashboard",
        "hint": "Use git clone with the GitHub URL",
        "validPatterns": [
          "git clone.*novapay/merchant-dashboard",
          "git clone.*github.com/novapay/merchant-dashboard"
        ],
        "validationRules": {
          "mustInclude": ["git clone"],
          "mustIncludeAny": ["novapay/merchant-dashboard", "github.com/novapay/merchant-dashboard"]
        },
        "successOutput": "Cloning into 'merchant-dashboard'...\nremote: Enumerating objects: 1247, done.\nremote: Counting objects: 100% (1247/1247), done.\nremote: Compressing objects: 100% (892/892), done.\nReceiving objects: 100% (1247/1247), 2.34 MiB | 12.5 MiB/s, done.\nResolving deltas: 100% (623/623), done.",
        "acceptedCommands": [
          "git clone https://github.com/novapay/merchant-dashboard",
          "git clone git@github.com:novapay/merchant-dashboard.git"
        ]
      },
      {
        "id": "cd",
        "order": 2,
        "instruction": "Navigate into the project directory",
        "hint": "Use cd to change directory",
        "validPatterns": [
          "^cd merchant-dashboard$",
          "^cd ./merchant-dashboard$"
        ],
        "validationRules": {
          "exactMatch": ["cd merchant-dashboard", "cd ./merchant-dashboard"]
        },
        "successOutput": "",
        "acceptedCommands": [
          "cd merchant-dashboard",
          "cd ./merchant-dashboard"
        ]
      },
      {
        "id": "install",
        "order": 3,
        "instruction": "Install the project dependencies",
        "hint": "This project uses npm",
        "validPatterns": [
          "^npm install$",
          "^npm i$"
        ],
        "validationRules": {
          "exactMatch": ["npm install", "npm i"]
        },
        "successOutput": "added 1423 packages in 8.2s\n\n247 packages are looking for funding\n  run `npm fund` for details",
        "acceptedCommands": [
          "npm install",
          "npm i"
        ]
      },
      {
        "id": "run",
        "order": 4,
        "instruction": "Start the development server",
        "hint": "Check the package.json scripts",
        "validPatterns": [
          "^npm run dev$",
          "^npm start$"
        ],
        "validationRules": {
          "exactMatch": ["npm run dev", "npm start"]
        },
        "successOutput": "> merchant-dashboard@1.0.0 dev\n> vite\n\n  VITE v5.0.0  ready in 342ms\n\n  ➜  Local:   http://localhost:5173/\n  ➜  Network: use --host to expose",
        "acceptedCommands": [
          "npm run dev",
          "npm start"
        ]
      }
    ],
    "completionMessage": {
      "title": "Dev Environment Ready!",
      "description": "Your local development environment is set up and the server is running."
    }
  }
